<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <com.example.android.imview.imnineimgridview.GlideImageView
        android:tileMode="repeat"
        android:scaleType="fitXY"
        android:id="@+id/ImageGlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <com.sunfusheng.progress.CircleProgressView
        android:id="@+id/GlideProgress"
        app:cpv_innerPadding="2dp"
        app:cpv_outerColor="@color/transparent90"
        app:cpv_outerSize="1dp"
        app:cpv_progressNormalColor="@color/transparent"
        app:cpv_progressReachColor="@color/transparent90"
        app:cpv_progressStyle="FillInnerArc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:progress="0"
        android:visibility="gone" />
</RelativeLayout>